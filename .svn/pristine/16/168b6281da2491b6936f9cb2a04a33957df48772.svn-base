/* for side menu, accordions */
.side_menu {
    width: 22%;
    height: 90%;
    
    /* to have the side menu fixed on the page even if 
       the page is scrolled. */
    position:fixed;

    /* float the menu to the right side of the page, bringing the
       element below the menu up and wrap around the menu. */
    float: right;

    /* needed to position the menu on the right side of the page. 
       the width will be calculated from the right side of the page. */
    right: 5px;

    overflow: auto;
}

/* for each accordion in the menu*/
.accordion {
	/* bottom margin set to give some room between each accordion */
	margin-bottom: 30px;
}

/* define size of the contents of each and every accordions */
.accordion_content {
    overflow: scroll;
    max-height: 300px;
}

/* for the search box in Graphs page */
.search_box {
	margin-bottom: 30px;
}

/* change active header colors using css provided by jQuery UI */
.accordion .ui-accordion-header.ui-state-active { 
	background: rgb(250, 235, 199); 
}